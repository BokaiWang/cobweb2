<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?eclipse.ant.import ?>

<project>
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="make_version_file">
    	<tstamp>
    	    <format property="cw.build.longdate" pattern="yyyy-MM-dd-HH:mm" locale="en,CA"/>
        </tstamp>
    	<exec executable="C:\Program Files (x86)\Git\bin\git.exe" outputproperty="gitversion">
    		<arg value="describe" />
    		<arg value="--always" />
    		<arg value="--long" />
    		<arg value="--dirty=-modified" />
    	</exec>
    	<!-- When cobweb runs from eclipse, there is no jar manifest to put the verison in -->
    	<!-- we put it in a new file instead -->
    	<echo file="resources/version_file.txt">${gitversion} ${cw.build.longdate}</echo>
    </target>
</project>
